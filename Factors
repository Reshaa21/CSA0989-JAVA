import java.util.*;
class Perfect {
public static void main(String arg[]) {
Scanner sc = new Scanner(System.in);
int n, i;
int factors = 0;
System.out.println("Enter number:");
n = sc.nextInt();
for (i = 1; i < n; i++) {
if (n % i == 0) {
factors += i; 
}
}
if (factors == n){
System.out.println(n + " is a perfect number.");
} 
else{
System.out.println(n + " is not a perfect number.");
}
}
}
